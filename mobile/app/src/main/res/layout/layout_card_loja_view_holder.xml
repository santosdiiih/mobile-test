<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"

    app:layout_constraintTop_toTopOf="parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="Gifts Cards"
            android:gravity="center"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="15dp"/>
        
        <ImageView
            android:id="@+id/imageProduto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/titleProduto"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:src="@drawable/jogo"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/imageProduto"
            android:background="@drawable/botao_degrade"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:text="Comprar"
            android:onClick="abrirDialog"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>